<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="jpaUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.twilio.automatedsurvey.survey.Survey</class>
        <class>com.twilio.automatedsurvey.survey.Question</class>

        <properties>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/automated-survey-servlets-test" />
            <property name="javax.persistence.jdbc.user"
                      value="postgres" />
            <property name="javax.persistence.jdbc.password"
                      value="postgres" />
            <property name="eclipselink.target-database" value="PostgreSQL"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="eclipselink.logging.level" value="ALL"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="testJpaUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.twilio.automatedsurvey.survey.Survey</class>
        <class>com.twilio.automatedsurvey.survey.Question</class>

        <properties>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/automated-survey-servlets-test" />
            <property name="javax.persistence.jdbc.user"
                      value="postgres" />
            <property name="javax.persistence.jdbc.password"
                      value="postgres" />
            <property name="eclipselink.target-database" value="PostgreSQL"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="eclipselink.logging.level" value="ALL"/>
        </properties>
    </persistence-unit>

</persistence>